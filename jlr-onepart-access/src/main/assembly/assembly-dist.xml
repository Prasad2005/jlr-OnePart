<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
   http://maven.apache.org/xsd/assembly-1.1.2.xsd">
   
	<id>distribution</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>	
	<files>
		<file>
			<source>target/cvplugin.properties</source>
			<outputDirectory>META-INF</outputDirectory>
		</file>
		<file>
			<source>pom.xml</source>
			<outputDirectory>maven</outputDirectory>
		</file>
	</files>
	<fileSets>
		<!-- Not packaged with plugin because sources present in sources jar (maven-source-plugin)
		<fileSet>
			<directory>src</directory>
			<outputDirectory>maven/src</outputDirectory>
		</fileSet>
		-->
		<fileSet>
			<directory>target/site</directory>
			<outputDirectory>documents</outputDirectory>
			<includes>
				<include>**/*.pdf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/documents</directory>
			<outputDirectory>documents</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>