	<servers>
		<server>
			<id>cloudview</id>
			<username>${env.NEXUS_USERNAME}</username>
			<password>${env.NEXUS_PASSWORD}</password>
		</server>
		<server>
			<id>snapshots</id>
			<username>${env.ARTIFACTORY_USERNAME}</username>
			<password>${env.ARTIFACTORY_PASSWORD}</password>
		</server>
		<server>
			<id>releases</id>
			<username>${env.ARTIFACTORY_USERNAME}</username>
			<password>${env.ARTIFACTORY_PASSWORD}</password>
		</server>
	</servers>
  <mirrors>	
	<mirror>
		<id>cloudview</id>
		<name>Repository for cloudview</name>
		<url>https://nexus.exalead.com/repository/exalead-releases</url>
		<mirrorOf>*</mirrorOf>
	 </mirror> 
	 <mirror>
        <id>maven</id>
        <name>Maven Repository Manager 1</name>
        <url>https://repo1.maven.org/maven2/</url>
        <mirrorOf>central</mirrorOf>
      </mirror>
  </mirrors>
	<profiles>
	    <profile>
			<id>skip_reports</id>
				<properties>
				<maven.cv-components-doc.skip>true</maven.cv-components-doc.skip>
				<skipSurefireReport>true</skipSurefireReport>
				<findbugs.skip>true</findbugs.skip>
				<skipTests>true</skipTests>
				<checkstyle.skip>true</checkstyle.skip>
				<pmd.skip>true</pmd.skip>
				<cpd.skip>true</cpd.skip>
				<maven.javadoc.skip>true</maven.javadoc.skip>
				<mpir.skip>true</mpir.skip>
				<maven.confluence-doc.skip>true</maven.confluence-doc.skip>
				</properties>
		</profile>
		<profile>
			<id>cloudview</id>

			<properties>
				<downloadSources>true</downloadSources>
				<downloadJavadocs>true</downloadJavadocs>
				<assembly.ui.classes.skip>false</assembly.ui.classes.skip>
				<assembly.ui.widgets.skip>false</assembly.ui.widgets.skip>
				<assembly.ui.all.skip>true</assembly.ui.all.skip>
			</properties>
			
			

			<repositories>
			    
				<repository>
					<id>snapshots</id>
					<name>artifactory-2-prd-l7jd-snapshots</name>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<url>${env.DISTRIBUTION_SNAPSHOTS_URL}</url>
					<layout>default</layout>
				</repository>
				<repository>
					<id>releases</id>
					<name>artifactory-2-prd-l7jd-releases</name>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<url>${env.DISTRIBUTION_RELEASES_URL}</url>
					<layout>default</layout>
				</repository>							
			</repositories>
			
			<pluginRepositories>
				<pluginRepository>
					<id>snapshots</id>
					<name>artifactory-2-prd-l7jd-snapshots</name>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<url>${env.DISTRIBUTION_SNAPSHOTS_URL}</url>
					<layout>default</layout>
				</pluginRepository>
				<pluginRepository>
					<id>releases</id>
					<name>artifactory-2-prd-l7jd-releases</name>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<url>${env.DISTRIBUTION_RELEASES_URL}</url>
					<layout>default</layout>
				</pluginRepository>
			</pluginRepositories>
		</profile>

		<profile>
			<id>jenkins</id>
			<properties>
				<deploy.cloudview.instance>false</deploy.cloudview.instance>
				<assembly.ui.classes.skip>true</assembly.ui.classes.skip>
				<assembly.ui.widgets.skip>true</assembly.ui.widgets.skip>
				<assembly.ui.all.skip>false</assembly.ui.all.skip>
				<distribution.releases.url>${env.DISTRIBUTION_RELEASES_URL}</distribution.releases.url>
				<distribution.snapshots.url>${env.DISTRIBUTION_SNAPSHOTS_URL}</distribution.snapshots.url>
			</properties>
		</profile>

		<profile>
			<id>deploy_mui_classes</id>	
			<properties>
				<deploy.mui.components>${project.artifactId}-classes</deploy.mui.components>
			</properties>
		</profile>

		<profile>
			<id>deploy_mui_widgets</id>
			<properties>
				<deploy.mui.components>${project.artifactId}-widgets</deploy.mui.components>
			</properties>
		</profile>

		<profile>
			<id>deploy_mui_classes_widgets</id>	
			<properties>
				<deploy.mui.components>${project.artifactId}-widgets,${project.artifactId}-classes</deploy.mui.components>
			</properties>
		</profile>
	</profiles>

	<activeProfiles>
		<activeProfile>cloudview</activeProfile>
		<activeProfile>jenkins</activeProfile>
	</activeProfiles>

</settings>
